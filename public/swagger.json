    "/api/history": {
      "get": {
        "summary": "Get execution history",
        "description": "Retrieve the execution history of minds",
        "responses": {
          "200": {
            "description": "Successful retrieval of history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "his_list": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "title": {
                                "type": "string"
                              },
                              "executionTime": {
                                "type": "string"
                              },
                              "status": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add execution history record",
        "description": "Add a new execution history record",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "ID of the mind"
                  },
                  "title": {
                    "type": "string",
                    "description": "Title of the mind"
                  },
                  "executionTime": {
                    "type": "string",
                    "description": "Execution time"
                  },
                  "status": {
                    "type": "string",
                    "description": "Status of execution"
                  }
                },
                "required": ["id", "title", "executionTime", "status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful addition of history record",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing required fields",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Clear execution history",
        "description": "Clear all execution history records",
