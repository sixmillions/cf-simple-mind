  "paths": {
    "/api/auth/{token}": {
      "get": {
        "summary": "Authenticate user with token",
        "description": "Validate the provided token for authentication",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Authentication token"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful authentication",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Authentication failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/mind": {
      "get": {
        "summary": "Get all minds",
        "description": "Retrieve all minds (reminders) from the database",
        "responses": {
          "200": {
            "description": "Successful retrieval of minds",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new mind",
        "description": "Create a new mind (reminder) with the provided details",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Title of the mind"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the mind"
                  },
                  "time": {
                    "type": "string",
                    "description": "Scheduled time for the mind"
                  },
                  "trigger": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of triggers for the mind"
                  },
                  "enabled": {
                    "type": "boolean",
                    "description": "Whether the mind is enabled or not"
                  }
                },
                "required": ["title", "time"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful creation of mind",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing required fields",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "msg": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
