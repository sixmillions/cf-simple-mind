{
  "openapi": "3.0.0",
  "info": {
    "title": "Subscription Reminder API",
    "version": "1.0.0",
    "description": "API documentation for the Subscription Reminder application"
  },
  "servers": [
    {
      "url": "http://localhost:8787",
      "description": "Development server"
    },
    {
      "url": "https://subscribe_mind.sixpx.workers.dev",
      "description": "Production server"
    },
    {
      "url": "https://mind.sixmillions.cn",
      "description": "Alternative production server"
    }
